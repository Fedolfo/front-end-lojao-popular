{
  "compilerOptions": {
    "incremental": true,
    "outDir": "build/lib",
    "target": "es6",
    "module": "esnext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "sourceMap": true,
    "importHelpers": true,
    "declaration": true,
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "types": [
      "node",
      "jest"
    ],
  },
  "include": [
    "src/**/*",
    "src/setupTests.ts",
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}